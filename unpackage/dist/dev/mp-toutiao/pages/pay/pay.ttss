.container {
  font-size: 26rpx;
}
.good-carts {
  flex-direction: column;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}
.good-carts .good-box {
  display: flex;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.good-carts .good-box .good-money {
  width: 50%;
  font-size: 40rpx;
  color: red;
  font-weight: 900;
}
.good-carts .good-box .good-submit {
  width: 50%;
  background-color: red;
  color: #fff;
}
.buy-tips {
  display: flex;
  justify-content: space-between;
}
.buy-tips .buy-tips-right {
  color: #636363;
}
.card-box {
  border-radius: 8rpx;
  background-color: #fff;
  margin: 20rpx;
  padding: 20rpx;
}
.card-box .getnubmer {
  justify-content: space-between;
}
.card-box .card-header {
  display: flex;
  border-bottom: 1px #EBEEF5 solid;
  flex-direction: row;
  align-items: center;
  overflow: hidden;
  padding-bottom: 20rpx;
}
.card-box .card-header .header-avatar {
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.card-box .card-header .header-avatar image {
  width: 100%;
  height: 100%;
}
.card-box .card-content {
  display: flex;
  flex-direction: row;
  padding-top: 20rpx;
  flex: 1;
  overflow: hidden;
}
.card-box .card-content .phoneout {
  width: 100%;
  padding-top: 10px;
  font-size: 28rpx;
}
.card-box .card-content .item-header {
  margin-right: 20rpx;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  display: flex;
  height: 160rpx;
  width: 160rpx;
}
.card-box .card-content .item-header image {
  width: 100%;
  height: 100%;
}
.card-box .card-content .item-content {
  flex-direction: column;
  justify-content: space-between;
  display: flex;
}
.card-box .card-content .item-content .item-content-coursenumb, .card-box .card-content .item-content .item-content-doc {
  font-size: 24rpx;
  color: #636363;
}
.card-box .card-footer {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
  padding-bottom: 0;
}
.card-box .card-footer .item-price {
  justify-content: space-between;
  display: flex;
}
.card-box .card-footer .item-subtotal {
  display: flex;
  flex-direction: row-reverse;
  font-size: 32rpx;
}

