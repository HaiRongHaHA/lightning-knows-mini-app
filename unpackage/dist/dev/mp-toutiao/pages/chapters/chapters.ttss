.video_box uni-video, video {
  width: 100%;
}
.content {
  padding: 20rpx;
}
.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}
.details {
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #eeeeee;
  font-size: 24rpx;
}
.details .left, .details .right {
  display: flex;
  align-items: center;
}
.list {
  margin-top: 30rpx;
}
.list_title {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #333;
}
.item_title {
  margin: 30rpx 0;
  font-size: 24rpx;
}
.item_content {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}
.item_left {
  display: flex;
  font-size: 24rpx;
  font-weight: 400;
  color: #999;
  align-items: center;
}
.sk {
  padding: 0 16rpx;
  background-color: #3c8aff;
  color: #fff;
  border-radius: 40rpx;
  margin-right: 8rpx;
}
.sk1 {
  padding: 0 16rpx;
  background-color: #ccc;
  color: #fff;
  border-radius: 40rpx;
  margin-left: 8rpx;
}
.item_right {
  padding: 0 18rpx;
  background-color: #3c8aff26;
  color: #3c8aff;
  border-radius: 40rpx;
}
.active {
  color: #3c8aff;
}

