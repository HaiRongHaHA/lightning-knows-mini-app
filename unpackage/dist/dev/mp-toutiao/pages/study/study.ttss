.blank {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -75%);
  transform: translate(-50%, -75%);
}
.blank .empty {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.blank .empty .empty_img {
  width: 356rpx;
  height: 340rpx;
}
.blank .empty .empty_img .empty_img image {
  width: 100%;
  height: 100%;
}
.blank .empty .empty_img ._img {
  width: 100%;
  height: 100%;
}
.blank .empty .empty_text {
  font-size: 32rpx;
  font-weight: 500;
  color: #a5a5a5;
  opacity: .7;
}
.blank .home {
  margin-top: 30rpx;
  background: #007aff;
  color: #fff;
  border-radius: 100rpx;
  font-size: 24rpx;
}
.column {
  background-color: #fff;
  border-radius: 20rpx;
}
.column .column_title {
  display: flex;
  align-items: center;
  padding: 8rpx;
  padding-top: 20rpx;
  flex-direction: row;
  font-size: 28rpx;
  font-weight: 900;
}
.column .column_title image {
  width: 27rpx;
  height: 27rpx;
  margin-right: 4rpx;
}
.column .column_box {
  padding: 0px 16rpx;
}
.column .column_img_box {
  height: 128rpx;
  position: relative;
  border-radius: 8px;
  overflow: hidden;
}
.column .column_text {
  width: 100%;
  height: 25px;
  position: absolute;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding-left: 14px;
  box-sizing: border-box;
  font-size: 14px;
  line-height: 24px;
}
.column .column_item {
  height: 80px;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #eaeaea;
}
.column .column_item:last-child {
  border-bottom: none;
}
.column .column_item_left {
  margin-right: 20rpx;
}
.column .column_item_left uni-image {
  width: 212rpx;
  height: 160rpx;
  border-radius: 12rpx;
  display: inline-block;
  overflow: hidden;
  position: relative;
}
.column .column_item_left image {
  width: 212rpx;
  height: 160rpx;
  border-radius: 12rpx;
  display: inline-block;
  overflow: hidden;
  position: relative;
}
.column .column_item_right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
}
.column .column_item_top {
  font-size: 28rpx;
  font-weight: 700;
  color: #333;
  overflow: hidden;
  white-space: nowrap;
  width: 100%;
  text-overflow: ellipsis;
  display: inline-block;
}
.column .column_item_center {
  width: -webkit-max-content;
  width: max-content;
  font-size: 20rpx;
  font-weight: 400;
  color: #2770ff;
  border: 1px solid #2770ff;
  border-radius: 4rpx;
  background-color: #d4e2ff;
  padding: 4rpx 8rpx;
}
.column .column_item_bottom {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  flex-direction: row;
  font-size: 28rpx;
  color: #999;
}
.column .column_price {
  font-size: 28rpx;
  color: red;
}

